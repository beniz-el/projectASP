@page
@model projectASP.Pages.EditProfileModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Pages/Shared/_LayoutEtudiant.cshtml";
}


<h1 style="text-align: center;" class="text-secondary">Modifier votre profil </h1>
<hr />
<div class="pos">
    <div class="card">
        <div class="row">



            <div class="col-md-10 mx-auto" style="margin-top:10px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight: bold;">
                <form method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.CIN" />

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.login" class="control-label"></label>
                            <input asp-for="@Model.login" class="form-control" />
                            <span asp-validation-for="Etudiant.login" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.nom" class="control-label"></label>
                            <input asp-for="@Model.nom" class="form-control" />
                            <span asp-validation-for="Etudiant.nom" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.prenom" class="control-label"></label>
                            <input asp-for="@Model.prenom" class="form-control" />
                            <span asp-validation-for="Etudiant.prenom" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.datenaissance" class="control-label"></label>
                            <input asp-for="@Model.datenaissance" class="form-control" />
                            <span asp-validation-for="Etudiant.datenaissance" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.email" class="control-label"></label>
                            <input asp-for="@Model.email" class="form-control" />
                            <span asp-validation-for="Etudiant.email" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.tel" class="control-label"></label>
                            <input asp-for="@Model.tel" class="form-control" />
                            <span asp-validation-for="Etudiant.tel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.CNE" class="control-label"></label>
                            <input asp-for="@Model.CNE" class="form-control" />
                            <span asp-validation-for="Etudiant.CNE" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.filiere" class="control-label"></label>
                            <input asp-for="@Model.filiere" class="form-control" />
                            <span asp-validation-for="Etudiant.filiere" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.password" class="control-label"></label>
                            <input asp-for="@Model.password" class="form-control" />
                            <span asp-validation-for="Etudiant.password" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Etudiant.image" class="control-label"></label>
                            <input asp-for="@Model.image" class="form-control" />
                            <span asp-validation-for="Etudiant.image" class="text-danger"></span>
                        </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                </form>
            </div>
        </div>

