@page
@model projectASP.Pages.Absences.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutProfesseur.cshtml";
}


<h1 style="text-align: center;" class="text-secondary">Gestion des Absences</h1>
<div class="container-fluid" style="margin-bottom:10px;">
    <a type="button" class="btn btn-info" asp-page="Create"><i class="fas fa-plus"></i>&nbsp;Ajouter une absence</a>
</div>


<div class="card rounded shadow border-0">
    <div class="card-body bg-white rounded">
        <div class="table-responsive">
            <table id="example" style="width:100%" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Absence[0].CIN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Absence[0].matiere)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Absence[0].date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Absence[0].justification)
                        </th>

                        <th>
                            Modifier
                        </th>
                        <th>
                            Detailler
                        </th>
                        <th>
                            Supprimer
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Absence)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CIN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.matiere)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.justification)
                        </td>

                     

                        <td>
                            <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.CNE"><i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.CNE"><i class="fas fa-info-circle"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.CNE"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
