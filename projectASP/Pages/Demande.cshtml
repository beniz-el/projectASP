@page
@model projectASP.Pages.DemandeModel
@{
    ViewData["Title"] = "Demande";
    Layout = "~/Pages/Shared/_LayoutEtudiant.cshtml";
}


<h1 style="text-align: center;" class="text-secondary">Demande de document </h1>
<hr />
<div class="pos">
    <div class="card">
        <div class="row">
            <div class="col-md-10 mx-auto" style="margin-top:10px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight: bold;">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label class="control-label">CIN:</label>
                            <input asp-for="emailClass.CIN" class="form-control" />
                            <span asp-validation-for="emailClass.CIN" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label class="control-label">Fichier :</label>
                            <input asp-for="emailClass.mail" class="form-control" />
                            <span asp-validation-for="emailClass.mail" class="text-danger"></span>
                        </div>
                    </div>

                    <button style="margin-bottom:10px;" type="submit" id="sidebarCollapse" class="btn btn-info">

                        <span><i class="fas fa-plus"></i>Ajouter</span>
                    </button>
        
                    @Model.Msg
                </form>
            </div>
        </div>
    </div>


</div>
