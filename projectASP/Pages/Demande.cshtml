@page
@model projectASP.Pages.DemandeModel
@{
    ViewData["Title"] = "Demande";
}

<h1>Devenir Client</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            <div class="form-group">
                <label class="control-label">Email:</label>
                <input asp-for="emailClass.CIN" class="form-control" />
                <span asp-validation-for="emailClass.CIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adresse:</label>
                <input asp-for="emailClass.mail" class="form-control" />
                <span asp-validation-for="emailClass.mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
            @Model.Msg
        </form>
    </div>
</div>