@page
@model projectASP.Pages.Cours.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_LayoutProfesseur.cshtml";
}

<h1 style="text-align: center;" class="text-secondary">Details du cour</h1>



<hr />
<div class="pos">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="container-fluid">

                    <!--CARDS start here-->
                    <div class="card card-1  text-md-center" id="card1">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <td><span class="bold">      @Html.DisplayNameFor(model => model.Cour.CIN) </span></td>
                                    <td>
                                        <p>
                                            @Html.DisplayNameFor(model => model.Cour.CIN)
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">  @Html.DisplayNameFor(model => model.Cour.semestre) </span></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Cour.semestre)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">    @Html.DisplayNameFor(model => model.Cour.date) </span></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Cour.date)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">  @Html.DisplayNameFor(model => model.Cour.filiere) </span></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Cour.filiere)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold"> @Html.DisplayNameFor(model => model.Cour.lien) </span></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Cour.lien)
                                    </td>
                                </tr>
                             
                            </tbody>
                        </table>
                        <div class="pos1">
                            <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Cour.nom"><i class="fas fa-pencil-alt"></i> Modifier</a>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>





