@page
@model IndexModel
@{ ViewData["Title"] = "Home page";
    Layout = "~/Pages/Shared/_LayoutIndex.cshtml";

    }


@Model.Msg



<div class="row login" style="margin-left:260px; position: relative;">
    <div class="col col-sm-12 14 offset-14">
        <div class="card" style="width:500px;">
            <div style="text-align:center" class="card-action red white-text">
                <h3>Login form</h3>
            </div>

            <div class="card-content">
                <div class="form-field">

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-field">
                            <label asp-for="login.login" class="control-label"></label>
                            <input asp-for="login.login" class="form-control" />
                            <span asp-validation-for="login.login" class="text-danger"></span>
                        </div>


                        <div class="form-field">
                            <label asp-for="login.password" class="control-label"></label>
                            <input type="password" asp-for="login.password" class="form-control" />
                            <span asp-validation-for="login.password" class="text-danger"></span>
                        </div>

                        <div class="form-filed center-align">
                            <button class="btn-large red" type="submit">Login </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

