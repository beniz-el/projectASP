                                    <td>
                                        <p>
                                            @Html.DisplayFor(model => model.Etudiant.login)
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold"> @Html.DisplayNameFor(model => model.Etudiant.nom) </span></td>
                                    <td>
                                        @Html.DisplayFor(model => model.Etudiant.nom)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">  @Html.DisplayNameFor(model => model.Etudiant.prenom) </span></td>
                                    <td>
                                        @Html.DisplayFor(model => model.Etudiant.prenom)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">  @Html.DisplayNameFor(model => model.Etudiant.datenaissance) </span></td>
                                    <td>
                                        @Html.DisplayFor(model => model.Etudiant.datenaissance)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">  @Html.DisplayNameFor(model => model.Etudiant.email) </span></td>
                                    <td>
                                        @Html.DisplayFor(model => model.Etudiant.email)
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="bold">  @Html.DisplayNameFor(model => model.Etudiant.tel) </span></td>
