@{ Layout = "~/Pages/Shared/_Layout.cshtml"; }
<h1 style="text-align: center;" class="text-secondary">Details de l' Etudiant</h1>



<hr />
<div class="pos">
    <meta name="viewport" content="width=device-width, initial-scale=1" >
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="container-fluid">

                    <!--CARDS start here-->
