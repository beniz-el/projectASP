                                </tr>

                                <tr>
                                    <td><span class="bold">@Html.DisplayNameFor(model => model.Etudiant.image)</span></td>
                                    <td colspan="2">@Html.DisplayFor(model => model.Etudiant.image)</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="pos1">
                            <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Etudiant.CIN"><i class="fas fa-pencil-alt"></i> Modifier</a>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
