@page
@model projectASP.Pages.Notes.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutProfesseur.cshtml";
}

<h1 style="text-align: center;" class="text-secondary">Ajouter une note</h1>
<hr />
<div class="pos">
    <div class="card">
        <div class="row">
            <div class="col-md-10 mx-auto" style="margin-top:10px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight: bold;">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Note.CIN" class="control-label"></label>
                            <input asp-for="Note.CIN" class="form-control" />
                            <span asp-validation-for="Note.CIN" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Note.matiere" class="control-label"></label>
                            <input asp-for="Note.matiere" class="form-control" />
                            <span asp-validation-for="Note.matiere" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Note.note" class="control-label"></label>
                            <input asp-for="Note.note" class="form-control" />
                            <span asp-validation-for="Note.note" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Note.filiere" class="control-label"></label>
                            <input asp-for="Note.filiere" class="form-control" />
                            <span asp-validation-for="Note.filiere" class="text-danger"></span>
                        </div>
                    </div>

                    <button style="margin-bottom:10px;" type="submit" id="sidebarCollapse" class="btn btn-info">

                        <span><i class="fas fa-plus"></i>Ajouter</span>
                    </button>
                </form>

            </div>
        </div>
    </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
