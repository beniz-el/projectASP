@page
@model projectASP.Pages.Projets.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutProfesseur.cshtml";
}

<h1 style="text-align: center;" class="text-secondary">Modifier un projet</h1>
<hr />
<div class="card">
    <div class="row">
        <div class="col-md-10 mx-auto" style="margin-top:10px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight: bold;">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Projet.nom" />
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Projet.CIN" class="control-label"></label>
                        <input asp-for="Projet.CIN" class="form-control" />
                        <span asp-validation-for="Projet.CIN" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Projet.semestre" class="control-label"></label>
                        <input asp-for="Projet.semestre" class="form-control" />
                        <span asp-validation-for="Projet.semestre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Projet.date" class="control-label"></label>
                        <input asp-for="Projet.date" class="form-control" />
                        <span asp-validation-for="Projet.date" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Projet.filiere" class="control-label"></label>
                        <input asp-for="Projet.filiere" class="form-control" />
                        <span asp-validation-for="Projet.filiere" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Projet.sujet" class="control-label"></label>
                        <input asp-for="Projet.sujet" class="form-control" />
                        <span asp-validation-for="Projet.sujet" class="text-danger"></span>
                    </div>
                </div>
                <button style="margin-bottom:10px;" type="submit" id="sidebarCollapse" class="btn btn-info">

                    <span><i class="fas fa-plus"></i>Modifier</span>
                </button>
            </form>
        
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
